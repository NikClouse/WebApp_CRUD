@model User

<h2>Edit User</h2>
﻿
<form method="post">
	<div>
		<h3>Редактировать пользователя</h3>
	</div>

	<div class="text-danger font-weigh-bold" asp-validation-summary="All"></div>

	<input type="hidden" name="Id" value="@Model?.Id" />

	<div class=" row">
		<div class="col-6">
			<label asp-for="FirstName"></label> <br />
			<input class="col-form-label-sm" asp-for="FirstName" value="@Model?.FirstName" />
			<span asp-validation-for="FirstName"></span>
		</div>
	</div>

	<div class=" row">
		<div class="col-6">
			<label asp-for="LastName"></label> <br />
			<input class="col-form-label-sm" asp-for="LastName" value="@Model?.LastName"/>
			<span asp-validation-for="LastName"></span>
		</div>
	</div>

	<div class=" row">
		<div class="col-6">
			<label asp-for="Email"></label> <br />
			<input type="email" class="col-form-label-sm" asp-for="Email" value="@Model?.Email"/>
			<span asp-validation-for="Email"></span>
		</div>
	</div>

	<br />
	<div>
		<button type="submit" asp-area="" asp-controller="User" asp-action="Update">Обнавить</button>
	</div>
</form>